<Window x:Class="Searcher.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Searcher"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" Icon="Resources/SettingsIcon.ico" >
    <Grid>
        <Button x:Name="browseButton" Content="B" HorizontalAlignment="Left" Margin="259,10,0,0" VerticalAlignment="Top" Width="25" Height="25"/>
        <TextBlock x:Name="filePathTextBox" Text="{Binding PersonSourcePathText}"  HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" IsEnabled="False"/>
    </Grid>
</Window>
