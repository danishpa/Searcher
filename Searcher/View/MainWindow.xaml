<Window x:Class="Searcher.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="125" MinHeight="100" MaxHeight="1000" Width="300" MinWidth="300" MaxWidth="800"  ShowInTaskbar="False" WindowStyle="None" Background="Transparent" Closed="Window_Closed" MouseDown="Window_MouseDown" >

    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="DarkGreen" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>

    <Grid>
        <DataGrid Name="SearchResults" ItemsSource="{Binding DisplayedPersons, UpdateSourceTrigger=PropertyChanged}" FlowDirection="RightToLeft" CanUserAddRows="False" EnableColumnVirtualization="True" Margin="0,0,0,25" HorizontalContentAlignment="Right" HeadersVisibility="None" AutoGeneratedColumns="SearchResults_AutoGeneratedColumns" />
            <DockPanel VerticalAlignment="Bottom" Height="25" LastChildFill="True">
            <Button x:Name="SettingsButton" Width="25" HorizontalAlignment="Left" Click="SettingsButton_Click">
                <Image Source="/View/Resources/SettingsIcon.ico" Width="20" Height="20" />
            </Button>
            <TextBox Name="SearchTextBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" TextAlignment="Right" GotFocus="SearchTextBox_GotFocus"/>
        </DockPanel>
    </Grid>
</Window>