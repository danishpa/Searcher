<Window x:Class="Searcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="125" MinHeight="50" Width="300" MinWidth="300" MaxWidth="300" ShowInTaskbar="False" WindowStyle="None" Background="Transparent">

    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="DarkGreen" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>

    <Grid>
        <DataGrid Name="SearchResults" FlowDirection="RightToLeft" CanUserAddRows="False" EnableColumnVirtualization="True" Margin="0,0,0,25" HorizontalContentAlignment="Right" HeadersVisibility="None" >

        </DataGrid>
        <DockPanel VerticalAlignment="Bottom" Height="25" LastChildFill="True">
            <Button x:Name="button" Content="S" Width="25" HorizontalAlignment="Left"/>
            <TextBox Name="SearchTextBox" TextWrapping="Wrap" TextAlignment="Right" TextChanged="SearchTextBox_TextChanged" GotFocus="SearchTextBox_GotFocus"/>
        </DockPanel>

    </Grid>

</Window>
