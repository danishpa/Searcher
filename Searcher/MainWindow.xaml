<Window x:Class="Searcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="300" ShowInTaskbar="False" WindowStyle="None" Background="Transparent">

    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="DarkGreen" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>

    <Grid Cursor="None">
        <TextBox Name="SearchTextBox" HorizontalAlignment="Stretch" Height="25" TextWrapping="Wrap" VerticalAlignment="Bottom" TextChanged="SearchTextBox_TextChanged" GotFocus="SearchTextBox_GotFocus"/>
        <DataGrid Name="SearchResults" HorizontalAlignment="Stretch" Margin="0,0,0,25" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" HeadersVisibility="None">
        </DataGrid>
    </Grid>
</Window>
